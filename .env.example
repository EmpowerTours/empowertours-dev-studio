# Claude API (https://console.anthropic.com)
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# Wallet
DEPLOYER_PRIVATE_KEY=your_private_key_here

# Monad RPC
MONAD_MAINNET_RPC=https://rpc.monad.xyz
MONAD_TESTNET_RPC=https://testnet-rpc.monad.xyz

# Contract Addresses (fill after deployment)
STUDIO_CONTRACT_ADDRESS=
PYTH_ENTROPY_ADDRESS=0x... # Get from https://docs.pyth.network/entropy
SWITCHBOARD_ADDRESS=0x...   # Backup VRF provider

# Backend
PORT=5000
JWT_SECRET=your_random_jwt_secret_min_32_chars
NODE_ENV=development

# Database (MongoDB for user tracking)
MONGO_URI=mongodb://localhost:27017/empowertours-studio

# GitHub OAuth (optional, for repo export)
GITHUB_CLIENT_ID=your_github_app_client_id
GITHUB_CLIENT_SECRET=your_github_app_client_secret

# $TOURS Token
TOURS_TOKEN_ADDRESS=your_tours_token_address
